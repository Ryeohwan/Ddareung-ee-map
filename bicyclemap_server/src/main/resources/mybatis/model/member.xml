<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ssafy.happyhouse.member.mapper.MemberMapper">
	<select id="login" resultType="String" parameterType="member">
		select name from temp.member where id = #{id} and pw = #{pw}
	</select>

	<insert id="join" parameterType="member">
		insert into member (name,id,pw) values(#{name},#{id},#{pw})
	</insert>
	
	<update id="update" parameterType = "member">
		update temp.member set pw = #{pw}, name = #{name} where id = #{id}
	</update>
	
	<select id="idCheck" parameterType="String" resultType="int">
		select count(id)
		from member
		where id = #{id}
	</select>
	
	<select id="getMember" parameterType="String" resultType="member">
		select * from temp.member where id = #{id}
	</select>
	
</mapper>